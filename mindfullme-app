import 'package:flutter/material.dart';

void main() => runApp(MindfullMeApp());

class MindfullMeApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: 'MindfullMe',
      theme: ThemeData(
        primaryColor: Color(0xFF3A75C4),
        accentColor: Color(0xFF4CAF50),
        backgroundColor: Color(0xFFC4D4ED),
        fontFamily: 'Roboto',
      ),
      home: HomePage(),
    );
  }
}

class HomePage extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('MindfullMe'),
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            Text(
              'Welcome to MindfullMe!',
              style: TextStyle(
                fontSize: 24,
                fontWeight: FontWeight.bold,
              ),
            ),
            SizedBox(height: 16),
            RaisedButton(
              child: Text('Get Started'),
              onPressed: () {
                Navigator.push(
                  context,
                  MaterialPageRoute(builder: (context) => MindfulnessPage()),
                );
              },
            ),
          ],
        ),
      ),
    );
  }
}

class MindfulnessPage extends StatefulWidget {
  @override
  _MindfulnessPageState createState() => _MindfulnessPageState();
}

class _MindfulnessPageState extends State<MindfulnessPage> {
  int _currentStep = 0;
  List<Step> _steps = [    Step(      title: Text('Breathe'),      content: Text('Take deep breaths for 2 minutes.'),      isActive: true,    ),    Step(      title: Text('Relax'),      content: Text('Relax your muscles for 5 minutes.'),      isActive: true,    ),    Step(      title: Text('Reflect'),      content: Text('Reflect on your thoughts and feelings for 10 minutes.'),      isActive: true,    ),  ];

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Mindfulness Exercises'),
      ),
      body: Stepper(
        currentStep: _currentStep,
        steps: _steps,
        onStepTapped: (index) {
          setState(() {
            _currentStep = index;
          });
        },
        onStepContinue: () {
          setState(() {
            if (_currentStep < _steps.length - 1) {
              _currentStep += 1;
            } else {
              // TODO: Show progress and offer personalized coaching
              // based on user's individual needs and preferences.
            }
          });
        },
        onStepCancel: () {
          setState(() {
            if (_currentStep > 0) {
              _currentStep -= 1;
            } else {
              Navigator.pop(context);
            }
          });
        },
      ),
    );
  }
}
