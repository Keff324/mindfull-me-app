class ExerciseButton extends StatelessWidget {
  final String text;
  final Function onTap;

  const ExerciseButton({Key? key, required this.text, required this.onTap})
      : super(key: key);

  @override
  Widget build(BuildContext context) {
    return GestureDetector(
      onTap: onTap as void Function()?,
      child: Container(
        padding: EdgeInsets.all(16),
        margin: EdgeInsets.symmetric(horizontal: 24, vertical: 8),
        decoration: BoxDecoration(
          borderRadius: BorderRadius.circular(16),
          color: Colors.grey.shade300,
        ),
        child: Text(
          text,
          style: TextStyle(
            fontSize: 20,
            fontWeight: FontWeight.bold,
          ),
        ),
      ),
    );
  }
}

import 'package:flutter/material.dart';

class BreathingExerciseScreen extends StatefulWidget {
  @override
  _BreathingExerciseScreenState createState() => _BreathingExerciseScreenState();
}

class _BreathingExerciseScreenState extends State<BreathingExerciseScreen> {
  bool isBreathing = false;

  void _startBreathing() {
    setState(() {
      isBreathing = true;
    });
  }

  void _stopBreathing() {
    setState(() {
      isBreathing = false;
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text('Breathing Exercise'),
      ),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            if (!isBreathing)
              ElevatedButton(
                onPressed: _startBreathing,
                child: Text('Start Breathing Exercise'),
              ),
            if (isBreathing)
              Column(
                children: [
                  Text('Breathe in...'),
                  SizedBox(height: 16),
                  Text('Hold...'),
                  SizedBox(height: 16),
                  Text('Breathe out...'),
                  SizedBox(height: 32),
                  ElevatedButton(
                    onPressed: _stopBreathing,
                    child: Text('Stop Breathing Exercise'),
                  ),
                ],
              ),
          ],
        ),
      ),
    );
  }
}

import 'package:flutter/material.dart';

class BreathingExercise extends StatefulWidget {
  @override
  _BreathingExerciseState createState() => _BreathingExerciseState();
}

class _BreathingExerciseState extends State<BreathingExercise> {
  int _breathCount = 0;
  String _breathMessage = 'Take a deep breath in through your nose...';

  void _updateBreathCount() {
    setState(() {
      _breathCount++;
    });
  }

  void _resetBreathCount() {
    setState(() {
      _breathCount = 0;
      _breathMessage = 'Take a deep breath in through your nose...';
    });
  }

  void _startBreathing() {
    _resetBreathCount();
    _breathMessage = 'Take a deep breath in through your nose...';
  }

  void _nextBreath() {
    if (_breathCount % 2 == 0) {
      _breathMessage = 'Hold your breath...';
    } else {
      _breathMessage = 'Exhale slowly through your mouth...';
    }
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text(
          'Breathing Exercise',
          style: TextStyle(
            fontSize: 28.0,
            fontWeight: FontWeight.bold,
            color: Colors.white,
          ),
        ),
        backgroundColor: Colors.blueGrey[900],
        centerTitle: true,
      ),
      body: Container(
        padding: EdgeInsets.all(24.0),
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          crossAxisAlignment: CrossAxisAlignment.center,
          children: <Widget>[
            Text(
              'Breath Count: $_breathCount',
              style: TextStyle(
                fontSize: 28.0,
                fontWeight: FontWeight.bold,
                color: Colors.blueGrey[900],
              ),
            ),
            SizedBox(
              height: 24.0,
            ),
            Text(
              _breathMessage,
              textAlign: TextAlign.center,
              style: TextStyle(
                fontSize: 24.0,
                fontWeight: FontWeight.normal,
                color: Colors.blueGrey[900],
              ),
            ),
            SizedBox(
              height: 24.0,
            ),
            RaisedButton(
              onPressed: () {
                _updateBreathCount();
                _nextBreath();
              },
              child: Text(
                'Breathe',
                style: TextStyle(
                  fontSize: 20.0,
                  fontWeight: FontWeight.normal,
                  color: Colors.white,
                ),
              ),
              color: Colors.blueGrey[900],
              padding: EdgeInsets.symmetric(horizontal: 32.0, vertical: 16.0),
            ),
            SizedBox(
              height: 16.0,
            ),
            RaisedButton(
              onPressed: () {
                _startBreathing();
              },
              child: Text(
                'Reset',
                style: TextStyle(
                  fontSize: 20.0,
                  fontWeight: FontWeight.normal,
                  color: Colors.white,
                ),
              ),
              color: Colors.blueGrey[900],
              padding: EdgeInsets.symmetric(horizontal: 32.0, vertical: 16.0),
            ),
            SizedBox(
              height: 24.0,
            ),
            Text(
              'Don\'t forget to breathe deeply and relax!',
              textAlign: TextAlign.center,
              style: TextStyle(
                fontSize: 20.0,
                fontWeight: FontWeight.normal,
                color: Colors.blueGrey[900],
              ),
            ),
          ],
        ),
      ),
    );
  }
}


import 'package:flutter/material.dart';

class MeditationExercise extends StatefulWidget {
  @override
  _MeditationExerciseState createState() => _MeditationExerciseState();
}

class _MeditationExerciseState extends State<MeditationExercise> {
  String _meditationType = 'Mindfulness';
  int _meditationTime = 5;
  bool _isMeditating = false;

  List<String> _meditationTypes = ['Mindfulness', 'Loving-kindness', 'Body Scan'];
  List<int> _meditationTimes = [5, 10, 15, 20];

  void _startMeditation() {
    setState(() {
      _isMeditating = true;
    });
    Future.delayed(Duration(minutes: _meditationTime), () {
      setState(() {
        _isMeditating = false;
      });
      _showMeditationCompleteDialog();
    });
  }

  void _showMeditationCompleteDialog() {
    showDialog(
      context: context,
      builder: (BuildContext context) {
        return AlertDialog(
          title: Text('Meditation Complete'),
          content: Text('You have successfully completed your meditation session.'),
          actions: [
            FlatButton(
              onPressed: () {
                Navigator.of(context).pop();
              },
              child: Text('Close'),
            ),
          ],
        );
      },
    );
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text(
          'Meditation Exercise',
          style: TextStyle(
            fontSize: 24.0,
            fontWeight: FontWeight.bold,
            color: Colors.white,
          ),
        ),
        backgroundColor: Colors.blueGrey[900],
        centerTitle: true,
      ),
      body: Container(
        padding: EdgeInsets.all(16.0),
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          crossAxisAlignment: CrossAxisAlignment.center,
          children: <Widget>[
            DropdownButton(
              value: _meditationType,
              items: _meditationTypes.map((type) {
                return DropdownMenuItem(
                  value: type,
                  child: Text(type),
                );
              }).toList(),
              onChanged: (value) {
                setState(() {
                  _meditationType = value;
                });
              },
            ),
            SizedBox(
              height: 16.0,
            ),
            DropdownButton(
              value: _meditationTime,
              items: _meditationTimes.map((time) {
                return DropdownMenuItem(
                  value: time,
                  child: Text('$time minutes'),
                );
              }).toList(),
              onChanged: (value) {
                setState(() {
                  _meditationTime = value;
                });
              },
            ),
            SizedBox(
              height: 32.0,
            ),
            RaisedButton(
              onPressed: () {
                _startMeditation();
              },
              child: Text(
                'Start Meditation',
                style: TextStyle(
                  fontSize: 20.0,
                  fontWeight: FontWeight.normal,
                  color: Colors.white,
                ),
              ),
              color: Colors.blueGrey[900],
              padding: EdgeInsets.symmetric(horizontal: 32.0, vertical: 16.0),
            ),
            SizedBox(
              height: 16.0,
            ),
            Visibility(
              visible: _isMeditating,
              child: Text(
                'Meditating...',
                textAlign: TextAlign.center,
                style: TextStyle(
                  fontSize: 24.0,
                  fontWeight: FontWeight.normal,
                  color: Colors.blueGrey[900],
                ),
              ),
            ),
          ],
        ),
      ),
    );
  }
}

import 'package:flutter/material.dart';

class GratitudeExercise extends StatefulWidget {
  @override
  _GratitudeExerciseState createState() => _GratitudeExerciseState();
}

class _GratitudeExerciseState extends State<GratitudeExercise> {
  final TextEditingController _textController = TextEditingController();
  List<String> _gratitudeList = [];

  void _addGratitude() {
    if (_textController.text.isNotEmpty) {
      setState(() {
        _gratitudeList.add(_textController.text);
        _textController.clear();
      });
    }
  }

  void _removeGratitude(int index) {
    setState(() {
      _gratitudeList.removeAt(index);
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text(
          'Gratitude Exercise',
          style: TextStyle(
            fontSize: 24.0,
            fontWeight: FontWeight.bold,
            color: Colors.white,
          ),
        ),
        backgroundColor: Colors.blueGrey[900],
        centerTitle: true,
      ),
      body: Column(
        crossAxisAlignment: CrossAxisAlignment.stretch,
        children: <Widget>[
          Expanded(
            child: ListView.builder(
              itemCount: _gratitudeList.length,
              itemBuilder: (BuildContext context, int index) {
                return Dismissible(
                  key: UniqueKey(),
                  direction: DismissDirection.endToStart,
                  onDismissed: (direction) {
                    _removeGratitude(index);
                  },
                  background: Container(
                    alignment: AlignmentDirectional.centerEnd,
                    color: Colors.red,
                    child: Padding(
                      padding: const EdgeInsets.fromLTRB(0, 0, 10, 0),
                      child: Icon(
                        Icons.delete,
                        color: Colors.white,
                      ),
                    ),
                  ),
                  child: ListTile(
                    title: Text(_gratitudeList[index]),
                  ),
                );
              },
            ),
          ),
          Padding(
            padding: const EdgeInsets.all(8.0),
            child: TextField(
              controller: _textController,
              decoration: InputDecoration(
                hintText: 'Enter something you are grateful for',
              ),
              onSubmitted: (text) {
                _addGratitude();
              },
            ),
          ),
          RaisedButton(
            onPressed: () {
              _addGratitude();
            },
            child: Text(
              'Add Gratitude',
              style: TextStyle(
                fontSize: 20.0,
                fontWeight: FontWeight.normal,
                color: Colors.white,
              ),
            ),
            color: Colors.blueGrey[900],
            padding: EdgeInsets.symmetric(horizontal: 32.0, vertical: 16.0),
          ),
        ],
      ),
    );
  }
}

import 'package:flutter/material.dart';

class GratitudePractice extends StatefulWidget {
  @override
  _GratitudePracticeState createState() => _GratitudePracticeState();
}

class _GratitudePracticeState extends State<GratitudePractice> {
  final TextEditingController _gratitudeController = TextEditingController();
  List<String> _gratitudeList = [];

  void _addGratitude() {
    String gratitude = _gratitudeController.text.trim();
    if (gratitude.isNotEmpty) {
      setState(() {
        _gratitudeList.add(gratitude);
        _gratitudeController.clear();
      });
    }
  }

  void _removeGratitude(int index) {
    setState(() {
      _gratitudeList.removeAt(index);
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        title: Text(
          'Gratitude Practice',
          style: TextStyle(
            fontSize: 24.0,
            fontWeight: FontWeight.bold,
            color: Colors.white,
          ),
        ),
        backgroundColor: Colors.blueGrey[900],
        centerTitle: true,
      ),
      body: Container(
        padding: EdgeInsets.all(16.0),
        child: Column(
          mainAxisAlignment: MainAxisAlignment.start,
          crossAxisAlignment: CrossAxisAlignment.stretch,
          children: <Widget>[
            Text(
              'Reflect on the things you are thankful for in your life:',
              style: TextStyle(
                fontSize: 20.0,
                fontWeight: FontWeight.normal,
                color: Colors.black,
              ),
            ),
            SizedBox(height: 16.0),
            TextField(
              controller: _gratitudeController,
              decoration: InputDecoration(
                hintText: 'Enter something you are grateful for',
              ),
            ),
            SizedBox(height: 16.0),
            RaisedButton(
              onPressed: _addGratitude,
              child: Text(
                'Add Gratitude',
                style: TextStyle(
                  fontSize: 20.0,
                  fontWeight: FontWeight.normal,
                  color: Colors.white,
                ),
              ),
              color: Colors.blueGrey[900],
              padding: EdgeInsets.symmetric(horizontal: 32.0, vertical: 16.0),
            ),
            SizedBox(height: 32.0),
            Text(
              'Your Gratitude List:',
              style: TextStyle(
                fontSize: 20.0,
                fontWeight: FontWeight.normal,
                color: Colors.black,
              ),
            ),
            SizedBox(height: 16.0),
            Expanded(
              child: ListView.builder(
                itemCount: _gratitudeList.length,
                itemBuilder: (BuildContext context, int index) {
                  return ListTile(
                    title: Text(_gratitudeList[index]),
                    trailing: IconButton(
                      icon: Icon(Icons.delete),
                      onPressed: () => _removeGratitude(index),
                    ),
                  );
                },
              ),
            ),
          ],
        ),
      ),
    );
  }
}

